<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carditem_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="User Login"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            style="@style/TextView_UserCardView"
            android:layout_width="200dp"
            android:text="User Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_location"
            style="@style/TextView_UserCardView"
            android:layout_below="@id/user_name"
            android:text="Location"
            android:textColor="@color/DarkGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_blog"
            style="@style/TextView_UserCardView"
            android:layout_below="@id/user_location"
            android:autoLink="web"
            android:text="Blog"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/public_repos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/user_login"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/item_public_repos"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>